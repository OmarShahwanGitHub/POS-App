// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  role          UserRole  @default(CUSTOMER)
  image         String?
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  ADMIN
  CASHIER
  KITCHEN
  CUSTOMER
}

// Restaurant models
model MenuItem {
  id                      String                   @id @default(cuid())
  name                    String
  description             String?
  price                   Float
  category                String
  available               Boolean                  @default(true)
  orderItems              OrderItem[]
  customizationTemplates  CustomizationTemplate[]
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
}

model CustomizationTemplate {
  id         String   @id @default(cuid())
  menuItemId String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  type       String   // "remove_cheese", "extra_cheese", etc.
  name       String   // Display name like "No Cheese", "Extra Cheese"
  price      Float    @default(0) // Additional price for this customization
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Order {
  id            String        @id @default(cuid())
  orderNumber   Int           @unique @default(autoincrement())
  customerId    String?
  customer      User?         @relation(fields: [customerId], references: [id])
  customerName  String?       // For walk-in customers without accounts
  items         OrderItem[]
  status        OrderStatus   @default(PENDING)
  paymentMethod PaymentMethod
  paymentId     String?       // Square payment ID
  subtotal      Float
  tax           Float
  total         Float
  orderType     OrderType     @default(IN_STORE)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  completedAt   DateTime?
}

enum OrderStatus {
  PENDING
  PREPARING
  READY
  COMPLETED
  CANCELLED
}

enum PaymentMethod {
  CASH
  CARD
  SQUARE
}

enum OrderType {
  IN_STORE
  ONLINE
}

model OrderItem {
  id              String               @id @default(cuid())
  orderId         String
  order           Order                @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItemId      String
  menuItem        MenuItem             @relation(fields: [menuItemId], references: [id])
  quantity        Int
  price           Float                // Price at time of order
  customizations  ItemCustomization[]
  createdAt       DateTime             @default(now())
}

model ItemCustomization {
  id          String    @id @default(cuid())
  orderItemId String
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  type        String    // "remove_cheese", "remove_pickles", etc.
  name        String    // Display name
  price       Float     @default(0) // Additional price for this customization
  createdAt   DateTime  @default(now())
}
