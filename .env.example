# Database - Using local PostgreSQL (production uses Neon/Vercel Postgres)
DATABASE_URL="postgresql://user:password@localhost:5432/brigado_pos"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"  
NEXTAUTH_SECRET="generate-a-secure-random-string-here"  # Generate with: openssl rand -base64 32

# Square Payment Integration
SQUARE_SANDBOX_APPLICATION_ID="your-sandbox-application-id"
SQUARE_PROD_APPLICATION_ID="your-production-application-id"
SQUARE_SANDBOX_ACCESS_TOKEN="your-sandbox-access-token"
SQUARE_PROD_ACCESS_TOKEN="your-production-access-token"
SQUARE_LOCATION_ID="your-square-location-id"
SQUARE_ENVIRONMENT="sandbox"  # Use "production" for live environment
SQUARE_DEVICE_ID="SIMULATED_DEVICE"  # Use "SIMULATED_DEVICE" for testing

# Public environment variables for client-side Square Web SDK
NEXT_PUBLIC_SQUARE_APP_ID="your-production-application-id"  # Same as SQUARE_PROD_APPLICATION_ID
NEXT_PUBLIC_SQUARE_LOCATION_ID="your-square-location-id"  # Same as SQUARE_LOCATION_ID
